<footer>
    <div class="container">
        <div class="row">
                <div class="col-md-12 text-center">
                    @if (Document.ContainsKey("Canonical"))
                    {
                      <p class="text-center small text-muted">Originally published at <a href='@Document.GetString("Canonical")'>@Document.GetString("Canonical")</a>.</p>
                      <br />
                    }
                    <p class="copyright text-muted m-0">
                        @Document.GetString(WebKeys.Copyright) by Alexandre Nédélec
                        <br />
                        The opinions expressed herein are my own and do not represent those of my employer or any other third-party views in any way.
                    </p>
                    <ul class="list-inline text-center small">
                        @{
                            IDocument rssFeed = Outputs["**/*.rss"].FirstOrDefault();
                            IDocument atomFeed = Outputs["**/*.atom"].FirstOrDefault();
                        }
                        @if (rssFeed != null) {
                            <li class="list-inline-item">
                                <a href="@Context.GetLink(rssFeed)"><i class="fa fa-rss"></i> RSS Feed</a>
                            </li>
                        }
                        @if (atomFeed != null) {
                            <li class="list-inline-item">
                                <a href="@Context.GetLink(atomFeed)"><i class="fa fa-rss"></i> Atom Feed</a>
                            </li>
                        }
                        <li class="list-inline-item">
                            <a href="https://github.com/techwatching/techwatching.dev"><i class="fab fa-github"></i> This site on GitHub</a>
                        </li>
                    </ul>
                </div>
        </div>
    </div>
</footer>